    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "test",
                "nbagrid_api_app"
            ]
        },
        // Clean up current grids:
        //     python .\manage.py shell
        //     from nbagrid_api_app.models import GameFilterDB
        //     from datetime import datetime
        //     GameFilterDB.objects.all().filter(date__gte=datetime.now()).delete()
        // Generate 30 new grids:
        //     1..30 | ForEach-Object { python manage.py generate_tomorrow_grid --next-missing }
        {
            "name": "Python Debugger: Generate Grid",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "generate_tomorrow_grid",
                "--next-missing"
            ]
        },
        {
            "name": "Python Debugger: Upload local grids to production",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "upload_grids_to_production",
                "--all-future",
                "--api-url=${config:NBAGRID_API_URL}",
                "--api-key=${config:NBAGRID_API_TOKEN}"
            ]
        },
        {
            "name": "Python Debugger: Populate Teammates",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "populate_teammates"
            ]
        },
        {
            "name": "Python Debugger: Update Player Data",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "update_nba_data",
                "--all",
                "--current-season-only",
                //"--players",
                //"--awards",
                "--telegram-notify",
                "--continue-on-error"
                //"--player-ids",
                //#"1629638"
            ]
        },
        {
            "name": "Python Debugger: Sync Player Data with Production",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "update_nba_data",
                "--init-only",
                "--sync-to-production",
                "--production-url=${config:NBAGRID_API_URL}",
                "--api-key=${config:NBAGRID_API_TOKEN}"
            ]
        },
        {
            "name": "Python Debugger: Optimize entity images",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/batch_process_images.py",
            "console": "integratedTerminal",
            "args": [
                "-o",
                "staticfiles/entity_images"
            ]
        },
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
            ],
            "django": true,
            "justMyCode": true,
            "env": {
                "NBAGRID_SHOW_IMPRESSUM": "1",
                "IMPORT_TEST_DATA": "1",
                "OTEL_SERVICE_NAME": "nbagrid-api",
                "OTEL_ENVIRONMENT": "development",
                "OTEL_EXPORTER_OTLP_ENDPOINT": "${config:otel.endpoint}",
                "GRAFANA_API_TOKEN": "${config:grafana.apiToken}",
                "GRAFANA_INSTANCE_ID": "${config:grafana.instanceId}"
            }
        }
    ]
}