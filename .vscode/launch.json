{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "test",
                "nbagrid_api_app"
            ]
        },
        {
            "name": "Python Debugger: Generate Grids",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "generate_grids",
                "5",
                "--quality-threshold",
                "80.0"
            ]
        },
        {
            "name": "Python Debugger: Populate Teammates",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "populate_teammates"
            ]
        },
        {
            "name": "Python Debugger: Optimize entity images",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/batch_process_images.py",
            "console": "integratedTerminal",
            "args": [
                "-o",
                "staticfiles/entity_images"
            ]
        },
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
            ],
            "django": true,
            "justMyCode": true,
            "env": {
                "NBAGRID_SHOW_IMPRESSUM": "1",
                "IMPORT_TEST_DATA": "1",
                "OTEL_SERVICE_NAME": "nbagrid-api",
                "OTEL_ENVIRONMENT": "development",
                "OTEL_EXPORTER_OTLP_ENDPOINT": "${config:otel.endpoint}",
                "GRAFANA_API_TOKEN": "${config:grafana.apiToken}",
                "GRAFANA_INSTANCE_ID": "${config:grafana.instanceId}"
            }
        },
        {
            "name": "Python Debugger: Test Tempo Connection",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_tempo.py",
            "console": "integratedTerminal",
            "env": {
                "GRAFANA_API_TOKEN": "${config:grafana.apiToken}",
                "GRAFANA_INSTANCE_ID": "${config:grafana.instanceId}",
                "OTEL_EXPORTER_OTLP_ENDPOINT": "${config:otel.endpoint}"
            }
        }
    ]
}